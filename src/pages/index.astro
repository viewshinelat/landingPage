
---

import Base from '../layouts/Base.astro';
import HeaderUTF8 from '../components/HeaderUTF8.svelte';
import HeroUTF8 from '../components/HeroUTF8.svelte';
import Soluciones from '../components/Soluciones.svelte';
import Aliados from '../components/Aliados.svelte';
import Cobertura from '../components/Cobertura.svelte';
import Vision2030 from '../components/Vision2030.svelte';
import Contacto from '../components/Contacto.svelte';
import Footer from '../components/Footer.svelte';
---


<style>
  .fadein {
    opacity: 0;
    transform: translateY(40px);
    animation: fadeinUp 1s cubic-bezier(.4,0,.2,1) forwards;
  }
  .fadein:nth-child(1) { animation-delay: 0.1s; }
  .fadein:nth-child(2) { animation-delay: 0.2s; }
  .fadein:nth-child(3) { animation-delay: 0.3s; }
  .fadein:nth-child(4) { animation-delay: 0.4s; }
  .fadein:nth-child(5) { animation-delay: 0.5s; }
  .fadein:nth-child(6) { animation-delay: 0.6s; }
  @keyframes fadeinUp {
    to {
      opacity: 1;
      transform: none;
    }
  }
</style>


<Base>
  <HeaderUTF8 />
  <div class="fadein"><HeroUTF8 /></div>
  <div class="fadein"><Soluciones /></div>
  <div class="fadein"><Aliados /></div>
  <div class="fadein"><Cobertura /></div>
  <div class="fadein"><Vision2030 /></div>
  <div class="fadein"><Contacto /></div>
  <Footer />
</Base>


