
---

import Base from '../layouts/Base.astro';
import Header from '../components/Header.svelte';
import Hero from '../components/Hero.svelte';
import Soluciones from '../components/Soluciones.svelte';
import Aliados from '../components/Aliados.svelte';
import Cobertura from '../components/Cobertura.svelte';
import Vision2030 from '../components/Vision2030.svelte';
import Contacto from '../components/Contacto.svelte';
import Footer from '../components/Footer.svelte';
---


<style>
  /* Fade-in animación para secciones */
  .fadein {
    opacity: 0;
    transform: translateY(40px);
    animation: fadeinUp 1s cubic-bezier(.4,0,.2,1) forwards;
  }
  .fadein:nth-child(1) { animation-delay: 0.1s; }
  .fadein:nth-child(2) { animation-delay: 0.2s; }
  .fadein:nth-child(3) { animation-delay: 0.3s; }
  .fadein:nth-child(4) { animation-delay: 0.4s; }
  .fadein:nth-child(5) { animation-delay: 0.5s; }
  .fadein:nth-child(6) { animation-delay: 0.6s; }
  @keyframes fadeinUp {
    to {
      opacity: 1;
      transform: none;
    }
  }

  /* Animación de hover para tarjetas y botones */
  .card, .solucion-card, .hito, .aliados-logos img {
    transition: box-shadow 0.3s, transform 0.3s;
  }
  .card:hover, .solucion-card:hover, .hito:hover, .aliados-logos img:hover {
    box-shadow: 0 8px 32px rgba(255,140,0,0.15), 0 2px 8px rgba(0,0,0,0.08);
    transform: translateY(-6px) scale(1.04);
  }

  /* Botón animado tipo SEMrush */
  .cta, button, .cta-btn {
    transition: background 0.2s, color 0.2s, box-shadow 0.2s, transform 0.2s;
    box-shadow: 0 2px 8px rgba(255,140,0,0.10);
  }
  .cta:hover, button:hover, .cta-btn:hover {
    background: linear-gradient(90deg, #ff9800 0%, #ff5722 100%);
    color: #fff;
    transform: scale(1.05);
    box-shadow: 0 8px 32px rgba(255,140,0,0.18);
  }

  /* Animación de entrada para imágenes y videos */
  img, video {
    opacity: 0;
    animation: fadeinImg 1.2s cubic-bezier(.4,0,.2,1) forwards;
    animation-delay: 0.3s;
  }
  @keyframes fadeinImg {
    to {
      opacity: 1;
    }
  }
</style>


<Base>

  <Header />
  <div class="fadein"><Hero /></div>
  <div class="fadein"><Soluciones /></div>
  <div class="fadein"><Aliados /></div>
  <div class="fadein"><Cobertura /></div>
  <div class="fadein"><Vision2030 /></div>
  <div class="fadein"><Contacto /></div>
  <Footer />
</Base>


